<h1>Follower Users</h1>
<% if @users.exists? %>
  <% @users.each do |user| %>
    <table class="table">
      <thead class="border-top border-bottom">
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="20"></th>
          <th colspan="20"></th>
          <th colspan="20"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.name %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>
          <td><%= link_to 'Show', user %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>